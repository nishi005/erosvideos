<div class="register_form_content">
	<% @title = '新規登録' %>
	<div class="register_message">
		<%= image_tag 'logo_pc.png' %>
		<p>新規登録</p>
		<p style="color: red"><%= flash['error_message'] %></p>
	</div>

	<div class="register_form">
		<%= form_for @user, url: users_path do |f| %>
			<div class="form-group user_name form_element">
				<%= f.label :usr_name, 'ユーザー名(必須)' %></br>
				<%= f.text_field :usr_name, size: 20, class: "form-control" %>
			</div>

			<div class="form-group user_password form_element">
				<%= f.label :user_password, "パスワード(必須)" %></br>
				<%= f.password_field :user_password, size: 20, class: "form-control" %>
			</div>

			<div class="form-group user_password_confirm form_element">
				<%= f.label :user_password_confirmation, "パスワード(確認用)" %></br>
				<%= f.password_field :user_password_confirmation, size: 20, class: "form-control" %>
			</div>

			<div class="submit_btn form_element">
				<%= button_tag '登録', type: "submit", class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>
</div>
