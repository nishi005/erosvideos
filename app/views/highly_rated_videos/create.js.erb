var $thums_up = $('.thums_up');
var $popup = $('.popup');

var top_offset = $thums_up.offset().top;
var left_offset = $thums_up.offset().left;

$('.thums_up_num').html(
	'<%= escape_javascript("#{@good_num}") %>'
);

//ポップアップを移動させる
$popup.css({
  top: top_offset + 25,
  left: left_offset
});

//ポップアップにメッセージを入れる
$('.popup p').html(
  '<%= escape_javascript("#{@message}") %>'
);

$('.popup p').css('display', 'inline-block');

$popup.fadeIn('slow');

setTimeout(function() {
  $popup.fadeOut('slow');
}, 2000);
