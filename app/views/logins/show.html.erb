<div class="login_form_content">
	<% @title = 'ログイン' %>
	<div class="login_message">
		<%= image_tag 'logo_pc.png' %>
		<p>ErosVideosにログイン</p>
		<p style="color: red"><%= @error_message %></p>
	</div>

	<div class="login_form">
		<%= form_tag action: :auth do %>
			<div class="form-group user_name form_element">
				<%= label_tag :username, 'ユーザー名' %></br>
				<%= text_field_tag :username, '', size: 20, class: "form-control" %>
			</div>

			<div class="form-group user_password form_element">
				<%= label_tag :password, "パスワード" %></br>
				<%= password_field_tag :password, "", size: 20, class: "form-control" %>
			</div>

			<div class="submit_btn form_element">
				<%= hidden_field_tag :referer, flash[:referer] %>
				<%= button_tag 'ログイン', type: 'submit', class: "btn btn-primary" %>
			</div>
		<% end %>
		<p>登録がお済みでない方は<%= link_to '新規登録', signup_path %>してください</p>
	</div>
</div>
